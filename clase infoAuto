public class InfoAuto {
	private int tanqueAuto = 0;
	private int combustibleActual = 0;
	private int carga = 0;
	private int cargaMin = 9999;
	
	public InfoAuto(int tanque ) {
		this.tanqueAuto = tanque;
		this.combustibleActual = this.tanqueAuto;
	}
	
	public int getTanqueAuto() {
		return tanqueAuto;
	}

	public void setTanqueAuto(int tanqueAuto) {
		this.tanqueAuto = tanqueAuto;
	}

	public int getCombustibleActual() {
		return combustibleActual;
	}
	public void setCombustibleActual(int combustibleActual) {
		this.combustibleActual = combustibleActual;
	}



	public int getCarga() {
		return carga;
	}
	public void setCarga(int carga) {
		this.carga = carga;
	}
	public int getCargaMin() {
		return cargaMin;
	}
	public void setCargaMin(int cargaMin) {
		this.cargaMin = cargaMin;
	}
	
	public void cargar(int cant) {
		this.combustibleActual += cant;
		this.carga += cant;
	}
}
